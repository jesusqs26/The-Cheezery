<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    >

    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:src="@drawable/caramelfrap"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/producto_nombre"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#B60089"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Caramel Frap" />

        <TextView
            android:id="@+id/producto_desc"
            android:fontFamily="sans-serif-light"
            android:textColor="#262525"
            android:textSize="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="12dp"
            android:text="DescripciÃ³n del producto" />

    </LinearLayout>
    <TextView
        android:id="@+id/producto_precio"
        android:textStyle="bold"
        android:textColor="#9E2E81"
        android:textSize="19sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="$5.00"/>

</LinearLayout>